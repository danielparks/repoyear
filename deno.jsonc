{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "fmt": {
    "exclude": [
      "**/*.svg",
      "src/api/Api.ts",
      "src/api/http-client.ts",
      "src/api/util.ts"
    ]
  },
  "imports": {
    "react": "npm:react",
    "@types/react": "npm:@types/react"
  },
  "lint": {
    "exclude": [
      "src/api/Api.ts",
      "src/api/http-client.ts",
      "src/api/util.ts"
    ],
    "rules": {
      // eslint already catches explicit any
      "exclude": ["no-explicit-any"]
    }
  }
}
