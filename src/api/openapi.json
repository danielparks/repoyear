{
  "components": {
    "responses": {
      "Error": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        },
        "description": "Error"
      }
    },
    "schemas": {
      "Error": {
        "description": "Error information from a response.",
        "properties": {
          "error_code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "request_id": {
            "type": "string"
          }
        },
        "required": [
          "message",
          "request_id"
        ],
        "type": "object"
      },
      "HealthResponse": {
        "description": "Response from `/api/health`",
        "properties": {
          "status": {
            "description": "Health status (always `\"ok\"`).\n\nThis indicates that the API server is up and nothing more.",
            "type": "string"
          }
        },
        "required": [
          "status"
        ],
        "type": "object"
      },
      "OAuthTokenResponse": {
        "description": "Response from OAuth endpoints\n\n* `/api/oauth/callback` * `/api/oauth/refresh`",
        "properties": {
          "access_token": {
            "description": "The access token from GitHub.",
            "type": "string"
          },
          "expires_in": {
            "description": "Number of seconds until the access token expires.",
            "format": "uint64",
            "minimum": 0,
            "nullable": true,
            "type": "integer"
          },
          "refresh_token": {
            "description": "The refresh token from GitHub (if tokens are set to expire).",
            "nullable": true,
            "type": "string"
          },
          "refresh_token_expires_in": {
            "description": "Number of seconds until the refresh token expires.",
            "format": "uint64",
            "minimum": 0,
            "nullable": true,
            "type": "integer"
          }
        },
        "required": [
          "access_token"
        ],
        "type": "object"
      },
      "VersionResponse": {
        "description": "Response from `/api/version`",
        "properties": {
          "version": {
            "description": "Version string from git describe.",
            "type": "string"
          }
        },
        "required": [
          "version"
        ],
        "type": "object"
      }
    }
  },
  "info": {
    "title": "RepoYear API",
    "version": "0.6.0"
  },
  "openapi": "3.0.3",
  "paths": {
    "/api/health": {
      "get": {
        "operationId": "health_check",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            },
            "description": "successful operation"
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        },
        "summary": "Handle `/api/health`"
      }
    },
    "/api/oauth/callback": {
      "get": {
        "operationId": "oauth_callback",
        "parameters": [
          {
            "description": "The code from GitHub.",
            "in": "query",
            "name": "code",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OAuthTokenResponse"
                }
              }
            },
            "description": "successful operation"
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        },
        "summary": "Handle `/api/oauth/callback`"
      }
    },
    "/api/oauth/refresh": {
      "get": {
        "operationId": "oauth_refresh",
        "parameters": [
          {
            "description": "The refresh token from GitHub.",
            "in": "query",
            "name": "refresh_token",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OAuthTokenResponse"
                }
              }
            },
            "description": "successful operation"
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        },
        "summary": "Handle `/api/oauth/refresh`"
      }
    },
    "/api/version": {
      "get": {
        "operationId": "version",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VersionResponse"
                }
              }
            },
            "description": "successful operation"
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        },
        "summary": "Handle `/api/version`"
      }
    }
  }
}
