{
  "components": {
    "responses": {
      "Error": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        },
        "description": "Error"
      }
    },
    "schemas": {
      "CallbackSuccessResponse": {
        "description": "Response from `/api/oauth/callback`",
        "properties": {
          "access_token": {
            "description": "The access token from GitHub.",
            "type": "string"
          }
        },
        "required": [
          "access_token"
        ],
        "type": "object"
      },
      "Error": {
        "description": "Error information from a response.",
        "properties": {
          "error_code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "request_id": {
            "type": "string"
          }
        },
        "required": [
          "message",
          "request_id"
        ],
        "type": "object"
      },
      "HealthResponse": {
        "description": "Response from `/api/health`",
        "properties": {
          "status": {
            "description": "Health status (always `\"ok\"`).\n\nThis indicates that the API server is up and nothing more.",
            "type": "string"
          }
        },
        "required": [
          "status"
        ],
        "type": "object"
      },
      "VersionResponse": {
        "description": "Response from `/api/version`",
        "properties": {
          "version": {
            "description": "Version string from git describe.",
            "type": "string"
          }
        },
        "required": [
          "version"
        ],
        "type": "object"
      }
    }
  },
  "info": {
    "title": "RepoYear API",
    "version": "0.6.0"
  },
  "openapi": "3.0.3",
  "paths": {
    "/api/health": {
      "get": {
        "operationId": "health_check",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            },
            "description": "successful operation"
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        },
        "summary": "Handle `/api/health`"
      }
    },
    "/api/oauth/callback": {
      "get": {
        "operationId": "oauth_callback",
        "parameters": [
          {
            "description": "The code from GitHub.",
            "in": "query",
            "name": "code",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CallbackSuccessResponse"
                }
              }
            },
            "description": "successful operation"
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        },
        "summary": "Handle `/api/oauth/callback`"
      }
    },
    "/api/version": {
      "get": {
        "operationId": "version",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VersionResponse"
                }
              }
            },
            "description": "successful operation"
          },
          "4XX": {
            "$ref": "#/components/responses/Error"
          },
          "5XX": {
            "$ref": "#/components/responses/Error"
          }
        },
        "summary": "Handle `/api/version`"
      }
    }
  }
}
